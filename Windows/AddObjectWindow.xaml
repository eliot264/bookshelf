<Window
    x:Class="Bookshelf.Windows.AddObjectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bookshelf.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Bookshelf.ViewModels"
    xmlns:views="clr-namespace:Bookshelf.Views"
    Title="AddObjectWindow"
    Width="800"
    Height="450"
    SizeToContent="Width"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModels:AddContinentViewModel}">
                <views:AddContinentView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding}" />
    </Grid>
</Window>
